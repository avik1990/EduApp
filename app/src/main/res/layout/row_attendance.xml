<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:id="@+id/rlv_leave"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corner_lightblue"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_appstatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#8eff70" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlv_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/rlv_leave"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#3f42cd"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/v_attendance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="View Attendance"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:background="@color/white" />


        <TextView
            android:id="@+id/v_takeattendance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Take Attendance"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>